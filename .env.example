# Database Configuration
# PostgreSQL connection string
# Format: postgresql://username:password@localhost:5432/database_name
DATABASE_URL="postgresql://username:password@localhost:5432/thebyteplay"

# Authentication Configuration
# Next.js auth configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-super-secret-random-string-min-32-chars"

# External API Keys (Optional)
# Uncomment and configure as needed

# Twitch API (for streaming integration)
# TWITCH_CLIENT_ID="your-twitch-client-id"
# TWITCH_CLIENT_SECRET="your-twitch-client-secret"

# YouTube API (for streaming integration)
# YOUTUBE_API_KEY="your-youtube-api-key"

# Discord API (for community integration)
# DISCORD_CLIENT_ID="your-discord-client-id"
# DISCORD_CLIENT_SECRET="your-discord-client-secret"

# Email Configuration (for notifications)
# EMAIL_FROM="noreply@thebyteplay.com"
# EMAIL_SERVER_HOST="smtp.example.com"
# EMAIL_SERVER_PORT=587
# EMAIL_SERVER_USER="your-email-username"
# EMAIL_SERVER_PASSWORD="your-email-password"

# File Upload Configuration
# UPLOADTHING_SECRET="your-uploadthing-secret"
# UPLOADTHING_APP_ID="your-uploadthing-app-id"

# Analytics (Optional)
# GOOGLE_ANALYTICS_ID="GA-XXXXXXXXX"
# POSTHOG_KEY="your-posthog-key"
# POSTHOG_HOST="https://app.posthog.com"

# Payment Processing (for monetization)
# STRIPE_PUBLISHABLE_KEY="pk_test_..."
# STRIPE_SECRET_KEY="sk_test_..."
# STRIPE_WEBHOOK_SECRET="whsec_..."

# Redis Configuration (for caching)
# REDIS_URL="redis://localhost:6379"

# Development/Production Environment
NODE_ENV="development"

# Feature Flags
ENABLE_TOURNAMENTS="true"
ENABLE_STREAMING="true"
ENABLE_MONETIZATION="true"
ENABLE_COMMUNITY_FEATURES="true"
